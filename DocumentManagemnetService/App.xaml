<Application x:Class="DocumentManagemnetService.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:graph="clr-namespace:GraphSharp.Controls;assembly=GraphSharp.Controls" 
             xmlns:local1="clr-namespace:DocumentManagementService.Models" 
             ShutdownMode="OnMainWindowClose"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Card.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Flipper.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Popupbox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DataGrid.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignExtensions;component/Themes/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignExtensions;component/Themes/MaterialDesignLightTheme.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#78B24B"/>
            <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="#78B24B"/>
            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#78B24B"/>
            <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="#78B24B"/>
            <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#78B24B"/>
            <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush" Color="#78B24B"/>

            <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#627af0"/>
            <SolidColorBrush x:Key="SecondaryAccentForegroundBrush" Color="#627af0"/>

            <DataTemplate x:Key="ComboboxItemTemplate">
                <StackPanel Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" 
                              Background="{DynamicResource PrimaryHueDarkBrush}"/>
                    <TextBlock Text="{Binding Name}"/>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="SelectionBoxTemplate">
                <TextBlock Text="Тип документа" Foreground="Gray" />
            </DataTemplate>

            <DataTemplate x:Key="SelectionRoleBoxTemplate">
                <TextBlock Text="Должность" Foreground="Gray" />
            </DataTemplate>

            <DataTemplate x:Key="SelectionUnitBoxTemplate">
                <TextBlock Text="Отдел" Foreground="Gray" />
            </DataTemplate>

            <DataTemplate x:Key="SelectionCategoryBoxTemplate">
                <TextBlock Text="Категории" Foreground="Gray" />
            </DataTemplate>

            <DataTemplate x:Key="CategoryComboBoxTemplate">
                <ContentPresenter x:Name="Presenter"
               Content="{Binding}"
               ContentTemplate="{StaticResource ComboboxItemTemplate}" />

                <DataTemplate.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ComboBoxItem}}" 
                             Value="{x:Null}">
                        <Setter TargetName="Presenter" Property="ContentTemplate" 
                            Value="{StaticResource SelectionCategoryBoxTemplate}" />
                    </DataTrigger>
                </DataTemplate.Triggers>
            </DataTemplate>

            <DataTemplate x:Key="ComboBoxTemplate">
                <ContentPresenter x:Name="Presenter"
               Content="{Binding}"
               ContentTemplate="{StaticResource ComboboxItemTemplate}" />

                <DataTemplate.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ComboBoxItem}}" 
                             Value="{x:Null}">
                        <Setter TargetName="Presenter" Property="ContentTemplate" 
                            Value="{StaticResource SelectionBoxTemplate}" />
                    </DataTrigger>
                </DataTemplate.Triggers>
            </DataTemplate>


            <DataTemplate x:Key="RoleComboBoxTemplate">
                <ContentPresenter x:Name="Presenter"
               Content="{Binding}"
               ContentTemplate="{StaticResource ComboboxItemTemplate}" />

                <DataTemplate.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ComboBoxItem}}" 
                             Value="{x:Null}">
                        <Setter TargetName="Presenter" Property="ContentTemplate" 
                            Value="{StaticResource SelectionRoleBoxTemplate}" />
                    </DataTrigger>
                </DataTemplate.Triggers>
            </DataTemplate>


            <DataTemplate x:Key="UnitComboBoxTemplate">
                <ContentPresenter x:Name="Presenter"
               Content="{Binding}"
               ContentTemplate="{StaticResource ComboboxItemTemplate}" />

                <DataTemplate.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ComboBoxItem}}" 
                             Value="{x:Null}">
                        <Setter TargetName="Presenter" Property="ContentTemplate" 
                            Value="{StaticResource SelectionUnitBoxTemplate}" />
                    </DataTrigger>
                </DataTemplate.Triggers>
            </DataTemplate>


            <DataTemplate DataType="{x:Type local1:RouteNode}" x:Key="RouteNodeTemplate">
                <Border Background="{Binding NodeColour}" CornerRadius="8" Padding="8">
                    <StackPanel>
                        <TextBlock Text="{Binding StepNumber, StringFormat='Этап {0}'}"  FontWeight="Bold" />
                        <TextBlock Text="{Binding Name}" FontStyle="Italic" />
                        <TextBlock Text="{Binding Role}"  FontStyle="Italic"/>
                    </StackPanel>
                </Border>
            </DataTemplate>
            <Thickness x:Key="tbMargin">0,10,0,0</Thickness>
            <Style TargetType="{x:Type graph:VertexControl}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type graph:VertexControl}">
                            <ContentPresenter Content="{TemplateBinding Vertex}" 
                                         ContentTemplate="{StaticResource RouteNodeTemplate}"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <DataTemplate x:Key="ModelComboboxItem">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Name, Mode=TwoWay}"/>
                </StackPanel>
            </DataTemplate>

            <Style TargetType="ListBox" x:Key="MenuListBoxStyle">
                <Setter Property="Background" Value="#78B24B"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBox">
                            <Border Background="{TemplateBinding Background}">
                                <ScrollViewer Focusable="False"
                                  Foreground="{TemplateBinding Foreground}">
                                    <ItemsPresenter />
                                </ScrollViewer>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="ItemContainerStyle">
                    <Setter.Value>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border 
                                x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                Padding="0">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#A0D16F"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#5A8C30"/>
                                            </Trigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsSelected" Value="True"/>
                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Bd" Property="Background" Value="#6DA83D"/>
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
