<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Warn"
      internalLogFile="internal-nlog.log">

	<!-- Targets: куда писать логи -->
	<targets>
		<!-- Запись основных логов -->
		<target xsi:type="File" name="fileAll"
				fileName="${basedir}/logs/${shortdate}.log"
				layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:${newline}${exception:format=tostring}}" />

		<!-- Ошибки -->
		<target xsi:type="File" name="fileError"
				fileName="${basedir}/logs/error/${shortdate}.log"
				layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:${newline}${exception:format=tostring}}" />
	</targets>

	<!-- Правила логирования -->
	<rules>
		<logger name="*" minlevel="Info" writeTo="fileAll" />
		<logger name="*" minlevel="Error" writeTo="fileError" />
	</rules>
</nlog>