<Window x:Class="DocumentManagementService.Views.RouteEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentManagementService.Views" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:graph="clr-namespace:DocumentManagementService"
        mc:Ignorable="d"
        Title="Редактирование маршрутной карты" Height="680" Width="1000" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Margin="10">
            <graph:RouteGraphLayout x:Name="graphLayout"
                                    IsEnabled="False"
                               Graph="{Binding Graph}"
                               LayoutAlgorithmType="Tree"
                               OverlapRemovalAlgorithmType="FSA" />
        </Border>


        <StackPanel Grid.Column="1" Margin="10" Cursor="Hand">

            <StackPanel Orientation="Vertical">
                <TextBlock Margin="10" Text="Название маршрута" FontSize="16"/>
                <TextBox Text="{Binding RouteName, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"  Width="379"
                         Foreground="Black" FontWeight="Bold" BorderBrush="Black"/>
            </StackPanel>

            <TextBlock Text="Этапы маршрута:" Margin="10" FontWeight="Bold" FontSize="16"/>
            <ScrollViewer>
                <ListBox ItemsSource="{Binding Steps}" 
                         SelectedItem="{Binding SelectedStep}" 
                         Height="66" BorderBrush="#FF020000">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Display}"/>
                                <TextBlock FontSize="10" Text="{Binding Role}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>

            <StackPanel Orientation="Horizontal" Margin="8">
                
                <StackPanel Orientation="Horizontal" Cursor="Hand" Width="144" Height="55">
                    <Button Style="{StaticResource MaterialDesignFlatButton}"  
                            Command="{Binding MoveUpCommand}"
                            Width="133" FontSize="16" Height="40">
                        <StackPanel Orientation="Horizontal" Width="86">
                            <materialDesign:PackIcon Kind="ArrowUp" 
                                             Height="26" Width="26" 
                                                     Foreground="#FF0A0000" />
                            <TextBlock Text="Вверх" Height="25"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">

                    <Button Style="{StaticResource MaterialDesignFlatButton}"  
                            Margin="5" Command="{Binding MoveDownCommand}" 
                            FontSize="16" Height="40">
                        <StackPanel Orientation="Horizontal" Width="86">
                            <materialDesign:PackIcon Kind="ArrowDown" 
                                              Height="30" Width="32" Foreground="#FF0A0000" />
                            <TextBlock Text="Вниз" Height="25"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Width="203">
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Margin="5" Command="{Binding RemoveStepCommand}"
                            FontSize="16" Height="40">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CloseCircleOutline" 
                                              Height="30" Width="32" Foreground="#FF0A0000" />
                            <TextBlock Margin="10,0,0,0" Text="Удалить" Height="25"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Отдел" Width="300" FontSize="16"/>
                <ComboBox Margin="10"                        
                           ItemsSource="{Binding Units}"
                          
                          SelectedItem="{Binding SelectedUnit}"                    
                          Width="300" Height="50" Background="{x:Null}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" FontSize="16" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Text="Сотрудник" Width="300" FontSize="16"/>
                <ComboBox
                        ItemsSource="{Binding FilteredUsers}"
                          SelectedItem="{Binding SelectedUser}"
                    
                    Width="300" Height="50" Margin="10" Background="{x:Null}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Display}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button Style="{StaticResource MaterialDesignFlatButton}" Margin="5" Content="Добавить" Command="{Binding AddStepCommand}" Cursor="Hand" Width="313"/>
            </StackPanel>



            <Button
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Content="Сохранить маршрут"
                    Command="{Binding SaveCommand}"
                    Margin="0 20 0 0"/>
            <Button Command="{Binding DeleteCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}" 
                    Content="Удалить маршрут"  Foreground="Red"/>

        </StackPanel>

    </Grid>
</Window>
