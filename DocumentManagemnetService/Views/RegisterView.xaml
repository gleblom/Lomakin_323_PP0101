<Window x:Class="DocumentManagementService.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentManagementService.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Подключение к системе"
        Height="645" Width="960" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="   Система управления корпоративными  &#xA;&#x9;         документами"
           Margin="279,86,281,0" VerticalAlignment="Top"
           Background="#78B24B" Height="70" 
               Foreground="#E5FFFFFF" FontSize="20"/>
        <StackPanel Orientation="Horizontal" Margin="46,221,46,328">
            <TextBox Margin="10" Text="{Binding Name}" 
            materialDesign:HintAssist.Hint="Имя"  Height="36" 
                     BorderBrush="#B2000000" Width="266"/>
            <TextBox Margin="10" Text="{Binding Surname}"
             materialDesign:HintAssist.Hint="Фамилия" Height="36" 
                     BorderBrush="#B2000000" Width="266"/>
            <TextBox Margin="10" Text="{Binding MiddleName}"
             materialDesign:HintAssist.Hint="Отчество" Height="36" 
                     BorderBrush="#B2000000" Width="266"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="46,304,46,245">
            <TextBox Margin="10" Text="{Binding SignInEmail}" 
            materialDesign:HintAssist.Hint="Email"  Height="36" 
                     BorderBrush="#B2000000" Width="266"/>
            <TextBox Margin="10" Text="{Binding TelNumber}"
             materialDesign:HintAssist.Hint="Телефон" Height="36" 
                     BorderBrush="#B2000000" Width="266"/>
            <TextBox Margin="10" Text="{Binding OrgName}"
             materialDesign:HintAssist.Hint="Название организации" Height="36" 
                     BorderBrush="#B2000000" Width="266"/>
        </StackPanel>
        <Button Command="{Binding SignInCommand}" 
                x:Name="SignIn" 
            Content="Подключиться к системе" 
            FontSize="16" FontWeight="Normal" 
                Background="#78B24B"
                BorderBrush="{x:Null}" Foreground="White" Margin="352,434,348,163" />
    </Grid>
</Window>
