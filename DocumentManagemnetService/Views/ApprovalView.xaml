<UserControl x:Class="DocumentManagementService.Views.ApprovalView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DocumentManagementService.ViewModels" 
            
     xmlns:graph="clr-namespace:DocumentManagementService" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="620">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Border Margin="10,10,10,72"
                     Grid.Row="0"
             BorderThickness="1" Grid.RowSpan="2">
            <graph:RouteGraphLayout x:Name="graphLayout" IsEnabled="True"
                    Graph="{Binding Graph}" LayoutAlgorithmType="Tree" 
                                    OverlapRemovalAlgorithmType="FSA" />
        </Border>
        <StackPanel Visibility="{Binding Visibility}"
                    Grid.Row="1" Orientation="Horizontal" Margin="383,5,-1,19" Cursor="Hand"  >
            <Button 
                    Content="Отклонить" 
                    Command="{Binding RejectCommand}" Margin="0,0,8,0" Foreground="White" 
                    Background="#FFF90000" BorderBrush="{x:Null}"/>
            <Button Margin="15,0"
                    Content="Согласовать"
                    Command="{Binding ApproveCommand}" Cursor="Hand" Foreground="White" 
                    Background="{DynamicResource PrimaryHueDarkBrush}" BorderBrush="{x:Null}" />
        </StackPanel>

    </Grid>
</UserControl>
