<UserControl x:Class="DocumentManagementService.Views.PublicDocumentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocumentManagementService.Views" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="420" d:DesignWidth="900">

    <Grid Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"  Grid.Row="0" Margin="8,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBox                     
                    Width="200"
                                        materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                    MaxLength="15"
                    materialDesign:HintAssist.Hint="Поиск"
                    Text="{Binding SearchQuery}"/>
                <materialDesign:PackIcon Kind="Magnify" Height="26" Width="25" />
            </StackPanel>
            <ComboBox ItemTemplate="{StaticResource CategoryComboBoxTemplate}" 
                      ItemsSource="{Binding Categories}" 
                      Margin="20,0,0,0" 
                      materialDesign:HintAssist.Hint="Тип документа" Height="33">
            </ComboBox>
            <ComboBox Margin="20,0,0,0" materialDesign:HintAssist.Hint="Автор" Height="33" Width="100"
                      ItemsSource="{Binding Users}"
                      ItemTemplate="{StaticResource AuthorComboBoxTemplate}"/>
            <TextBlock Margin="20,10,0,0" Text="Дата загрузки:" Height="18" Foreground="Gray"/>
            <DatePicker Margin="10,0,0,0"
                        Width="100"
                        materialDesign:HintAssist.Hint="От"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
            <DatePicker Margin="10,0,0,0"
                        Width="100"
                        materialDesign:HintAssist.Hint="До"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
        </StackPanel>

        <DataGrid x:Name="DocumentGrid" Grid.Row="1"
                  ItemsSource="{Binding FilteredDocuments}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  SelectedItem="{Binding SelectedDocument}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="150"/>
                <DataGridTextColumn Header="Дата загрузки" Binding="{Binding CreatedAt, StringFormat=d}" Width="150"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding FullName}" Width="300"/>
            </DataGrid.Columns>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction 
                                Command="{Binding SelectionCommand}"
                                CommandParameter="{Binding ElementName=DocumentGrid, 
                                Path=SelectedItem}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </DataGrid>
    </Grid>
</UserControl>
