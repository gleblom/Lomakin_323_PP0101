<UserControl x:Class="DocumentManagementService.Views.PublicDocumentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocumentManagementService.Views" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="420" d:DesignWidth="900">
    <UserControl.Resources>
        <DataTemplate x:Key="ComboboxItemTemplate">
                <StackPanel Orientation="Horizontal">
                    <CheckBox IsChecked="True" 
                              Background="{DynamicResource PrimaryHueDarkBrush}"/>
                    <TextBlock Text="{Binding Title}"/>
                </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="SelectionBoxTemplate">
            <TextBlock Text="Тип документа" Foreground="Gray" />
        </DataTemplate>

        <DataTemplate x:Key="ComboBoxTemplate">
            <ContentPresenter x:Name="Presenter"
               Content="{Binding}"
               ContentTemplate="{StaticResource ComboboxItemTemplate}" />
            
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ComboBoxItem}}" 
                             Value="{x:Null}">
                    <Setter TargetName="Presenter" Property="ContentTemplate" 
                            Value="{StaticResource SelectionBoxTemplate}" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"  Grid.Row="0" Margin="8,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBox                     
                    Width="200"
                    materialDesign:HintAssist.Hint="Поиск"
                    Text="{Binding SearchQuery}"/>
                <materialDesign:PackIcon Kind="Magnify" Height="26" Width="25" />
            </StackPanel>
            <ComboBox ItemTemplate="{StaticResource ComboBoxTemplate}" 
                      ItemsSource="{Binding ItemsSource}" 
                      Margin="20,0,0,0" 
                      materialDesign:HintAssist.Hint="Тип документа" Height="33">
            </ComboBox>
            <ComboBox Margin="20,0,0,0" materialDesign:HintAssist.Hint="Автор" Height="33"/>
            <TextBlock Margin="20,10,0,0" Text="Дата загрузки:" Height="18" Foreground="Gray"/>
            <DatePicker Margin="10,0,0,0"
                        Width="100"
                        materialDesign:HintAssist.Hint="От"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
            <DatePicker Margin="10,0,0,0"
                        Width="100"
                        materialDesign:HintAssist.Hint="До"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
        </StackPanel>

        <DataGrid x:Name="DocumentGrid" Grid.Row="1"
                  ItemsSource="{Binding FilteredDocuments}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  SelectedItem="{Binding SelectedDocument}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="150"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding CreatedAt, StringFormat=d}" Width="120"/>
            </DataGrid.Columns>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction 
                                Command="{Binding MouseDoubleClickCommand}"
                                CommandParameter="{Binding ElementName=DocumentGrid, 
                                Path=SelectedItem}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </DataGrid>
    </Grid>
</UserControl>
