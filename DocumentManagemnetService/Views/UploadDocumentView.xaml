<UserControl x:Class="DocumentManagementService.Views.UploadDocumentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocumentManagementService.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" Height="634" Width="1200">
    <UserControl.Resources>

        <DataTemplate x:Key="ComboboxItemTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding CategoryName}"/>
            </StackPanel>
        </DataTemplate>

    </UserControl.Resources>

    <Grid Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="260"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" >
            <TextBox 
                    Style="{StaticResource MaterialDesignFilledTextBox}"                 
                    Margin="5"
                     materialDesign:HintAssist.Hint="Название документа"
                     Text="{Binding DocumentTitle, UpdateSourceTrigger=PropertyChanged}" Width="313" Height="47" />

            <ComboBox ItemTemplate="{StaticResource ComboboxItemTemplate}" 
                      Margin="10"
                      materialDesign:HintAssist.Hint="Категория"
                      ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding SelectedFileCategory}" 
                      Width="310" Height="29" Background="#0C000000" >
            </ComboBox>
            <DatePicker IsEnabled="{Binding IsEnabled}"
                        Margin="10,0,0,0"
                        Width="310"
                        materialDesign:HintAssist.Hint="Действителен до"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
            <TextBox Margin="20" materialDesign:HintAssist.Hint="Описание"
                         MaxLength="200"
    TextWrapping="Wrap"
    VerticalScrollBarVisibility="Auto"
                Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="320" Height="106"/>

        </StackPanel>

        <Border Grid.Row="1"
                BorderBrush="#FF050000"
                BorderThickness="2"
                CornerRadius="8"               
                Padding="40"
                VerticalAlignment="Top"
                AllowDrop="True" Height="201" 
                Drop="Border_Drop"
                DragEnter="Border_DragEnter" 
                DragLeave="Border_DragLeave" 
                Margin="325,34,261,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="113" Width="610">
                <TextBlock Text="Перетащите сюда файл документа"
                           HorizontalAlignment="Center"
                           FontSize="16"
                           Foreground="Black"/>
                <Button Content="Выбрать файл"
                        Margin="20"
                        Command="{Binding SelectFileCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}" Foreground="Black" BorderBrush="Black" Width="240" />
                <TextBlock Text="{Binding SelectedFileName}"
                           Foreground="DarkSlateGray"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           FontSize="14"/>
            </StackPanel>
        </Border>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,0,20,0"
                    Grid.Row="1"
                    VerticalAlignment="Bottom"
                    >
            <Button Content="Загрузить в систему"
                    Command="{Binding SubmitCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}" Foreground="#FF200000" />
        </StackPanel>
    </Grid>
</UserControl>
