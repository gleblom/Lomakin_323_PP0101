<UserControl x:Class="DocumentManagementService.Views.RecoveryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocumentManagementService.Views"
             xmlns:local1="clr-namespace:DocumentManagementService"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="645" d:DesignWidth="960" Background="White" Cursor="Hand">
    <Grid>
        <StackPanel Visibility="{Binding EmailVisibility}" Margin="294,198,285,339">
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.HelperTextFontSize="11"
              materialDesign:HintAssist.HelperText="Введите Email, на который будет отправлен код для восстановления"
               materialDesign:HintAssist.Hint="Email"
               Style="{StaticResource MaterialDesignFilledTextBox}" Width="380" Height="45"/>
            <Button IsEnabled="{Binding IsEnabledRecovery}"
                    Margin="20" Command="{Binding GetCodeCommand}"  
                    Content="Получить код восстановления" Width="250" Background="{x:Null}"
                    BorderBrush="{x:Null}" Cursor="Hand">
                <i:Interaction.Behaviors>
                    <local1:DebounceBehavior/>
                </i:Interaction.Behaviors>
            </Button>
        </StackPanel>
        <Label Content="   Система управления корпоративными  &#xA;&#x9;         документами"
            Background="#78B24B" Foreground="#E5FFFFFF" FontSize="20" Margin="288,10,288,0" Height="70" VerticalAlignment="Top"/>
        <StackPanel Visibility="{Binding RecoveryVisibility}" Margin="294,304,286,249">
            <TextBox Text="{Binding RecoveryCode, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Код восстановления доступа"
                     Style="{StaticResource MaterialDesignFilledTextBox}" Width="380" Height="45"/>
            <Button Content="Изменить пароль" 
                    IsEnabled="{Binding IsEnabledChanger}"
                    Command="{Binding ChangePasswordCommand}" Width="150" Background="{x:Null}" BorderBrush="{x:Null}"/>
        </StackPanel>

        <StackPanel Visibility="{Binding PasswordVisibility}" Margin="293,397,283,87">
            <PasswordBox materialDesign:HintAssist.Hint="Пароль" 
                         Style="{StaticResource MaterialDesignFilledRevealPasswordBox}"
                         materialDesign:PasswordBoxAssist.Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         Width="380" Height="45"/>
            <PasswordBox Margin="0, 20" materialDesign:HintAssist.Hint="Подвтерждение пароля" 
                         Style="{StaticResource MaterialDesignFilledRevealPasswordBox}" 
                         Width="380" Height="45"
                          materialDesign:PasswordBoxAssist.Password="{Binding RecoveryPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Command="{Binding SaveCommand}" 
                    Content="Сохранить" Width="110" Cursor="Hand" Background="{x:Null}"
                    BorderBrush="{x:Null}"/>
        </StackPanel>
        
    </Grid>
</UserControl>
