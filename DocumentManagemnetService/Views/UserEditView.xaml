<Window x:Class="DocumentManagementService.Views.UserEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocumentManagementService.Views"
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             mc:Ignorable="d" ResizeMode="NoResize" Height="420">

    <Grid Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="330"/>
        </Grid.ColumnDefinitions>


        <StackPanel DataContext="{Binding CurrentUser}" Margin="5"  Grid.Column="0" Grid.Row="1">

            <TextBlock  Text="Фамилия" FontSize="20"/>
            <TextBox Margin="10"                
                     Text="{Binding SecondName}" Height="32"/>

            <TextBlock Text="Имя" FontSize="20"/>
            <TextBox Margin="10"                  
                     Text="{Binding FirstName}" Height="32"/>

            <TextBlock Text="Отчество" FontSize="20"/>
            <TextBox Margin="10"
                    Text="{Binding ThirdName}"                    
                     Height="32"/>

            <TextBlock Text="Email" FontSize="20"/>
            <TextBox Margin="10" 
                    Text="{Binding Email}"             
                     Height="32"/>

            <TextBlock Text="Телефон" FontSize="20"/>
            <TextBox Margin="10"
                    Text="{Binding Telephone}"
                     Height="32"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock Text="Должность" FontSize="20"/>
            <StackPanel Orientation="Horizontal">

                <ComboBox Margin="10" ItemsSource="{Binding Roles}"
                    SelectedItem="{Binding SelectedRole}"
                    ItemTemplate="{StaticResource ModelComboboxItem}"
                    Height="32" Width="180"/>

                <Button Background="{x:Null}" Command="{Binding AddRoleCommand}" BorderBrush="{x:Null}">
                    <materialDesign:PackIcon Kind="Add"/>
                </Button>

                <Button Background="{x:Null}" BorderBrush="{x:Null}" Command="{Binding EditRoleCommand}">
                    <materialDesign:PackIcon Kind="Pencil"/>
                </Button>

            </StackPanel>

            <TextBlock Text="Отдел" FontSize="20"/>

            <StackPanel Orientation="Horizontal">
                <ComboBox ItemTemplate="{StaticResource ModelComboboxItem}" 
                      Margin="10"         
                      SelectedItem="{Binding SelectedUnit}"
                      ItemsSource="{Binding Units}"
                      Height="32" Width="180"/>

                <Button Background="{x:Null}" Command="{Binding AddUnitCommand}"  BorderBrush="{x:Null}">
                    <materialDesign:PackIcon Kind="Add"/>
                </Button>

                <Button Background="{x:Null}" BorderBrush="{x:Null}" Command="{Binding EditUnitCommand}">
                    <materialDesign:PackIcon Kind="Pencil"/>
                </Button>

            </StackPanel>

            <StackPanel Orientation="Horizontal" Width="255">
                <Button Command="{Binding SaveUserCommand}" Content="Сохранить" 
                        Width="105" Margin="0,10" 
                        BorderBrush="{x:Null}" Background="{x:Null}"/>
                <Button Command="{Binding RemoveUserCommand}" Content="Удалить" 
                        Width="105" Margin="50, 0" 
                        BorderBrush="{x:Null}" Background="{x:Null}"/>
            </StackPanel>

        </StackPanel>

        <StackPanel Visibility="{Binding IsAddRoleVisible}" Grid.Column="2" Grid.Row="1" Margin="0,0,0,261" HorizontalAlignment="Center">
            <TextBox Text="{Binding Role}" 
                     materialDesign:HintAssist.HelperText="Название должности" 
                     Margin="5"
                     Width="310"/>

            <ComboBox Margin="10" Width="310" 
                      ItemsSource="{Binding Categories}"
                      ItemTemplate="{StaticResource ComboboxItemTemplate}"
                      materialDesign:HintAssist.HelperText="Укажите типы документов, с которыми может работать должность"/>

            <StackPanel Orientation="Horizontal" Margin="10 "  Width="254">
                <Button Command="{Binding SaveRoleCommand}" Content="Сохранить" Margin="5" Width="110" 
                    Height="30" Background="{x:Null}" BorderBrush="{x:Null}"/>
                <Button Command="{Binding RemoveRoleCommand}" Content="Удалить" Margin="5" Width="110" 
                    Height="30" Background="{x:Null}" BorderBrush="{x:Null}"/>

            </StackPanel>

        </StackPanel>

        <StackPanel Visibility="{Binding IsAddUnitVisible}" Grid.Column="2" Grid.Row="1" 
                    Margin="0,140,0,0" HorizontalAlignment="Center">
            <TextBox Text="{Binding Unit}" 
                     materialDesign:HintAssist.HelperText="Название отдела" 
                     Margin="5"
                     Width="310"/>

            <StackPanel Orientation="Horizontal" Margin="10" Width="254">
                <Button Command="{Binding SaveUnitCommand}" Content="Сохранить" Margin="5" Width="103" 
                    Height="30" BorderBrush="{x:Null}" Background="{x:Null}"/>
                <Button Command="{Binding RemoveUnitCommand}" Content="Удалить" Width="110"
                        Margin="25, 0"
                        Height="30" BorderBrush="{x:Null}" Background="{x:Null}"/>
            </StackPanel>

        </StackPanel>




    </Grid>
</Window>
